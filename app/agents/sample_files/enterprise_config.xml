<?xml version="1.0" encoding="UTF-8"?>
<enterprise-configuration version="2.1">
    <organization>
        <name>Global Tech Solutions</name>
        <industry>Technology</industry>
        <regions>
            <region id="NA">
                <name>North America</name>
                <headquarters>New York</headquarters>
                <datacenters>
                    <datacenter id="DC-NY">
                        <location>New York</location>
                        <capacity>1000</capacity>
                        <servers>
                            <server role="application">
                                <host>app1.nyc.example.com</host>
                                <environment>production</environment>
                                <resources>
                                    <cpu>16</cpu>
                                    <memory>64GB</memory>
                                    <storage>1TB</storage>
                                </resources>
                                <security>
                                    <ssl enabled="true">
                                        <provider>Let's Encrypt</provider>
                                        <auto-renewal>true</auto-renewal>
                                    </ssl>
                                    <firewall>
                                        <inbound-rules>
                                            <rule id="1">
                                                <port>443</port>
                                                <protocol>TCP</protocol>
                                                <source>0.0.0.0/0</source>
                                            </rule>
                                        </inbound-rules>
                                    </firewall>
                                </security>
                            </server>
                        </servers>
                    </datacenter>
                </datacenters>
            </region>
        </regions>
    </organization>
    <applications>
        <application id="CRM">
            <name>Customer Relationship Management</name>
            <version>3.5.1</version>
            <dependencies>
                <dependency>
                    <name>PostgreSQL</name>
                    <version>14.0</version>
                    <configuration>
                        <host>db.example.com</host>
                        <port>5432</port>
                        <database>crm_prod</database>
                        <pool>
                            <min-connections>10</min-connections>
                            <max-connections>100</max-connections>
                            <idle-timeout>300</idle-timeout>
                        </pool>
                    </configuration>
                </dependency>
                <dependency>
                    <name>Redis</name>
                    <version>6.2</version>
                    <configuration>
                        <cluster enabled="true">
                            <nodes>
                                <node>redis1.example.com:6379</node>
                                <node>redis2.example.com:6379</node>
                            </nodes>
                        </cluster>
                    </configuration>
                </dependency>
            </dependencies>
        </application>
    </applications>
    <monitoring>
        <providers>
            <provider name="Prometheus">
                <endpoint>https://metrics.example.com</endpoint>
                <scrape-interval>15s</scrape-interval>
                <retention>30d</retention>
            </provider>
            <provider name="ELK">
                <elasticsearch>
                    <hosts>
                        <host>es1.example.com:9200</host>
                        <host>es2.example.com:9200</host>
                    </hosts>
                    <index-pattern>logs-*</index-pattern>
                </elasticsearch>
            </provider>
        </providers>
    </monitoring>
</enterprise-configuration> 